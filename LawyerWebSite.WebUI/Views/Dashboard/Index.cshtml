@model AppUserLoginViewModel
@{
    Layout = "_DashboardLayout";
}

@if (ViewBag.Unconfirm != null)
{
    <div class="alert alert-danger alert-dismissible fade show text-center" role="alert">
        @ViewBag.Unconfirm
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

@if (ViewBag.Confirmed != null)
{
    <div class="alert alert-success alert-dismissible fade show text-center" role="alert">
        @ViewBag.Confirmed
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
<h4 class="display-4 text-center mB-3">Giriş Yap</h4>
<form class="p-3 w-50 mx-auto shadow rounded" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group row">
        <label class="col-form-label col-sm-3" asp-for="Email">E-Posta</label>
        <div class="col-sm-9">
            <input class="form-control" asp-for="Email" />
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-form-label col-sm-3" asp-for="Password">Şifre</label>
        <div class="col-sm-9">
            <input class="form-control" asp-for="Password" />
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="offset-sm-3 col-sm-9">
            <input type="checkbox" class="form-check-inline" asp-for="RememberMe" /> Beni Hatırla
            <a asp-controller="Dashboard" asp-action="ForgotPassword" class="btn btn-link float-right">Şifremi unuttum</a>
        </div>
    </div>

    <div class="form-group row">
        <div class="offset-sm-3 col-sm-9">
            <button type="submit" class="btn btn-primary">Giriş</button>
        </div>
    </div>
</form>

