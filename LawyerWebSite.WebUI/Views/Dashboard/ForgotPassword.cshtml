@model ForgotPasswordViewModel
@{
    Layout = "_DashboardLayout";
}

@if (ViewBag.Success != null)
{
<div class="alert alert-success alert-dismissible fade show" role="alert">
    @ViewBag.Success
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
}
<h4 class="display-4 text-center mb-3">Şifremi Unuttum</h4>
<p class="lead text-center font-italic">Şifrenizi sıfırlamak için sisteme kayıtlı e-posta adresinizi giriniz. Daha sonra e-posta adresinize gelecek olan linke tıklayarak yeni şifre oluşturun.</p>

<form class="p-3 w-50 mx-auto shadow rounded" method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group row">
        <label class="col-form-label col-sm-3" asp-for="Email">E-Posta</label>
        <div class="col-sm-9">
            <input class="form-control" asp-for="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="offset-sm-3 col-sm-9">
            <button type="submit" class="btn btn-primary">Gönder</button>
        </div>
    </div>
</form>