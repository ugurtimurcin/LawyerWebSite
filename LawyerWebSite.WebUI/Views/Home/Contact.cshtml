@model ContactModel


<div class="jumbotron mb-0 jumbotron-fluid" style="background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url(../img/iletisim.jpg); background-size: cover;">
    <div class="container">
        <h1 class="display-4 text-center text-light">İLETİŞİM</h1>

        <nav aria-label="breadcrumb">
            <ol class="breadcrumb w-25 mx-auto justify-content-center" style="background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5));">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index" class="text-decoration-none text-light">Anasayfa</a></li>
                <li class="breadcrumb-item active" aria-current="page">İletişim</li>
            </ol>
        </nav>
    </div>
</div>



<div class="container">
    @if (TempData["Mail"] != null)
    {
<div class="alert alert-success alert-dismissible fade show mt-3 text-center" role="alert">
    @TempData["Mail"]
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>}
    <div class="row my-5">
        <div class="col-md-6">
            <h4 class="display-4 text-center mb-5">İLETİŞİME GEÇİN</h4>
            <p class="text-justify lead">
                Hukuki konularda danışmanlık almak, dava veya hukuki probleminiz hakkında görüşmek üzere randevu veya teklif almak için iletişim bilgilerinden veya iletişim formunu doldurarak iletişime geçebilirsiniz.
            </p>
            <p class="text-justify lead">
                Mesai saatleri dışında e-posta yolu ile veya iletişim formunu doldurarak bize ulaşabilirsiniz. Formdan gönderdiğiniz mesajlara genellikle 24 saat içinde cevap verilmektedir.

            </p>
        </div>
        <div class="col-md-6">
            <form class="p-3 shadow" method="post">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-group row">
                    <div class="col">
                        <input asp-for="Name" class="form-control" placeholder="Adınız (*)">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="col">
                        <input asp-for="SurName" class="form-control" placeholder="Soyadınız (*)">
                        <span asp-validation-for="SurName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-12">
                        <input asp-for="Email" class="form-control" placeholder="E-Posta Adresiniz (*)">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-12">
                        <input asp-for="PhoneNumber" class="form-control" placeholder="Telefon Numaranız (İsteğe bağlı)">
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-12">
                        <input asp-for="Topic" class="form-control" placeholder="Konu (*)">
                        <span asp-validation-for="Topic" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-12">
                        <textarea asp-for="Content" class="form-control" rows="5" placeholder="Mesajınız (*)"></textarea>
                        <span asp-validation-for="Content" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-12">
                        <p class="text-secondary">(*) Doldurulması zorunlu alanlar.</p>
                        <button type="submit" class="btn btn-dark">Gönder</button>

                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/library/jquery-validation/jquery.validate.min.js"></script>
    <script src="~/library/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/scripts/scripts.js" type="text/javascript"></script>
}
